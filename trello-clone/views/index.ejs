<html>
    <head>
        <title>Trello Clone</title>
        <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet"/>
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.5/angular.min.js" type="text/javascript"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.18/angular-ui-router.js"  type="text/javascript"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/1.1.2/ui-bootstrap-tpls.min.js"  type="text/javascript"></script>
        <script src="/javascripts/angularApp.js" type="text/javascript"></script>
    </head>
    
    <body ng-app="trello-clone">
        <nav class="navbar navbar-default" ng-controller="AuthController">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#/home">Home</a>
                </div>
                
                    <form ng-hide="newUser" class="navbar-form navbar-left" ng-submit="logIn()">
                        <div class="form-group">
                            <span>Log In</span>
                            <input class="form-control input-sm" type="text" placeholder="username" ng-model="user.username" ng-required/>
                            <input class="form-control input-sm" type="text" placeholder="password" ng-model="user.password" ng-required/>
                            <button class="btn btn-default" type="submit"><span class="glyphicon glyphicon-ok" aria-hidden="true"></span></button>
                            <button class="btn btn-default" ng-click="newUser = !newUser">Need an account ?</button>
                        </div>
                    </form>
                    <form ng-show="newUser" class="navbar-form navbar-left" ng-submit="register()">
                        <div class="form-group">
                            <span>Register</span>
                            <input class="form-control input-sm" type="text" placeholder="username" ng-model="user.username" ng-required/>
                            <input class="form-control input-sm" type="text" placeholder="password" ng-model="user.password" ng-required/>
                            <button class="btn btn-default" type="submit"><span class="glyphicon glyphicon-ok" aria-hidden="true"></span></button>
                            <button class="btn btn-default" ng-click="newUser = !newUser">Already registered ?</button>
                        </div>
                    </form>
                
                <div>
                    <p class="navbar-text">Signed in as {{ currentUserName() }}</p>
                    <button class="btn btn-default" ng-click="logOut()">Log Out</button>
                </div>
            </div>
        </nav>
        <ui-view></ui-view>
    </body>
    
    <script type="text/ng-template" id="home.html">
        <div class="container">
            <div class="jumbotron">
                <h1>Trello Clone</h1>
            </div>
            <div class="row">
                <div class="col-md-3 col-sm-4 col-xs-6" ng-repeat="room in rooms">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <a href="#/rooms/{{$index}}"><h3>{{ room.name }}</h3></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </script>
    
    <script type="text/ng-template" id="rooms.html">
        <div class="row">
            <div class="col-md-4 col-xs-6">
                <span class="label label-default">
                    Tags :
                </span>
                <span ng-repeat="tag in room.tags"  ng-style="{'display': inline-block}">
                    <span class="label label-default" ng-style="{'background-image': none, 'background-color': tag.color}">
                        {{ tag.name }}
                    </span>
                </span>
            </div>
            <div class="col-md-5 col-xs-6">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <form class="form-inline" ng-submit="addTag()">
                            <div class="form-group">
                                <input class="form-control input-sm" type="text" placeholder="New Tag Name" ng-model="newTagName" ng-required/>
                                <input class="form-control input-sm" type="text" placeholder="New Tag Color" ng-model="newTagColor" ng-required/>
                                <button class="btn btn-default" type="submit"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-3 col-sm-4 col-xs-6" ng-repeat="taskList in room.taskLists">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div ng-hide="taskListEditing" ng-click="taskListEditing = true">
                            <h2 class="panel-title">{{ taskList.name }}</h2>
                        </div>
                        <form ng-show="taskListEditing" class="form-inline" ng-submit="taskListEditing = false">
                            <div class="form-group">
                                <input class="form-control" type="text" ng-model="taskList.name" ng-required/>
                                <button class="btn btn-default" type="submit"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button>
                            </div>
                        </form>
                    </div>
                    <div class="panel-body">
                        <div class="panel panel-default" ng-repeat="task in taskList.tasks">
                            <div class="panel-body">
                                <span ng-repeat="tag in task.tags"  ng-style="{'display': inline-block}">
                                    <span class="label label-default" ng-style="{'background-image': none, 'background-color': room.tags[tag].color}">
                                        {{ room.tags[tag].name }}
                                    </span>
                                </span>
                                
                                <span uib-dropdown>
                                    <span class="label label-default" id="simple-dropdown" uib-dropdown-toggle>+</span>
                                    <ul uib-dropdown-menu>
                                        <li ng-repeat="tag in room.tags">
                                        <a ng-click="addTagToTask(task, room.tags.indexOf(tag))">{{tag.name}}</a>
                                        </li>
                                    </ul>
                                </span>
                                
                                <br/>
                                <div ng-hide="taskEditing" ng-click="taskEditing = true">
                                    {{ task.content }}
                                </div>
                                <form ng-show="taskEditing" class="form-inline" ng-submit="taskEditing = false">
                                    <div class="form-group">
                                        <input class="form-control" type="text" ng-model="task.content" ng-required/>
                                        <button class="btn btn-default" type="submit"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <form class="form-inline" ng-submit="addTaskToList(taskList)">
                            <div class="form-group">
                                <input class="form-control" type="text" placeholder="New Task" ng-model="taskList.newTaskName"/>
                                <button class="btn btn-default" type="submit"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-4 col-xs-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <form class="form-inline" ng-submit="addTaskList()">
                            <div class="form-group">
                                <input class="form-control" type="text" placeholder="New TasksList" ng-model="newTaskListName"/>
                                <button class="btn btn-default" type="submit"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </script>
</html>